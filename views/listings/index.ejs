<% layout("/layouts/boilerplate") %>

<div id="filters">
  <%- include("../includes/filter.ejs") %>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label tax-label" for="switchCheckDefault"
        >Verified!
      </label>
    </div>
  </div>
</div>

<div class="container-fluid main-con mt-3">
  <%- include("../includes/weatherBar.ejs") %>

  <!-- Right Content (Listings) -->
  <div class="col-lg-50 col-md-8 col-sm-12">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-3">
      <% for(let listing of allListings) { %>
      <div class="col">
        <a
          href="/listings/<%= listing._id %>"
          class="listing-link text-decoration-none"
        >
          <div class="card listing-card h-100">
            <img
              src="<%= listing.image.url %>"
              class="card-img-top"
              alt="listing_image"
              style="height: 20rem; object-fit: cover"
            />
            <div class="card-body">
              <p class="card-text mb-0">
                <b><%= listing.title %></b>
                <%= listing.quantity.toLocaleString("en-IN")%><%= listing.unit
                %> <% if (listing.reviews && listing.reviews.length > 5) { %>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <i
                  id="check"
                  class="tax-info d-none badge bg-success text-light fw-semibold px-2 py-1 small"
                >
                  ✔ Certified
                </i>

                <% } %>

                <br />
                <b>&#8377;<%= listing.price.toLocaleString("en-IN") %></b>
              </p>
            </div>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>
</div>

<script>
  let taxSwitch = document.getElementById('switchCheckDefault');

  taxSwitch.addEventListener('click', () => {
    const taxInfos = document.querySelectorAll('.tax-info');
    taxInfos.forEach((info) => {
      if (info.classList.contains('d-none')) {
        info.classList.remove('d-none');
      } else {
        info.classList.add('d-none');
      }
    });
  });

  function updateLabelText() {
    const label = document.querySelector('.tax-label');
    if (window.innerWidth < 992) {
      label.textContent = '✔';
    } else {
      label.textContent = 'Verified!';
    }
  }

  window.addEventListener('resize', updateLabelText);
  window.addEventListener('DOMContentLoaded', updateLabelText);
</script>
