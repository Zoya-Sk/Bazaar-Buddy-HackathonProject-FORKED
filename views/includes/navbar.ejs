<style>
  .search-bar {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-left: 1rem;
  }

  .search-input {
    background-color: #1f2221;
    color: #e0e0e0 !important;
    border: 1px solid #3a3d3c;
    border-radius: 3rem;
    width: 30rem;
    padding: 0.5rem 1rem;
    transition: border-color 0.3s;
  }

  .search-input:focus {
    border-color: #0d6efd;
    outline: none;
  }

  .search-btn {
    background-color: #0d6efd;
    color: #ffffff;
    border: none;
    border-radius: 3rem;
    padding: 0.4rem 1rem;
    display: flex;
    align-items: center;
    transition: background-color 0.3s, border 0.3s;
  }

  .search-btn:hover {
    border: 1.5px solid #0a58ca;
    background-color: #0a58ca;
    color: #ffffff;
  }

  .search-btn i {
    margin-right: 0.5rem;
  }

  @media (min-width: 768px) and (max-width: 1100px) {
    .search-input {
      width: 20rem;
    }
  }

  @media (max-width: 768px) {
    .search-input {
      width: 15rem;
    }

    .search-label {
      display: none;
    }

    .search-btn i {
      margin-right: 0rem;
    }

    .search-btn {
      padding: 0.5rem 0.8rem;
    }

    .search-bar {
      margin-left: 0rem;
    }
  }

  @media (max-width: 510px) {
    .explore-link {
      display: none;
    }

    .search-input {
      width: 10rem;
    }

    .search-btn {
      font-size: 1rem;
    }
  }

  @media (max-width: 350px) {
    .search-input {
      width: 7rem;
    }
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div
    class="container-fluid d-flex align-items-center justify-content-between flex-wrap"
  >
    <div
      class="d-flex align-items-center gap-3 px-3 py-2 nav-wrapper shadow-sm rounded"
    >
      <a
        class="navbar-brand me-2 fs-4 text-warning"
        href="/listings"
        title="Bazaar Buddy"
      >
        <i class="fa-solid fa-lemon"></i>
      </a>

      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a
            class="nav-link explore-link fw-semibold text-light px-3 py-2 rounded nav-hover"
            href="/listings"
            title="Browse listings"
          >
            Explore
          </a>
        </div>
      </div>
    </div>

    <!-- Search Bar -->
    <form action="/search" method="GET" class="d-flex search-bar" role="search">
      <input
        class="form-control me-2 search-input"
        type="search"
        name="search"
        placeholder="Search"
      />
      <button class="btn search-btn" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
        <span class="search-label">Search</span>
      </button>
    </form>

    <!-- Toggle Button -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Right Nav -->
    <div
      class="collapse navbar-collapse justify-content-end"
      id="navbarNavAltMarkup"
    >
      <div class="navbar-nav text-end gap-2 px-2">
        <a
          class="nav-link btn btn-sm btn-outline-primary rounded-pill"
          href="/listings/new"
        >
          Add new Product
        </a>
        <% if (!currUser) { %>
        <a
          class="nav-link btn btn-sm btn-primary rounded-pill px-3"
          href="/signup"
          ><b>Sign up</b></a
        >
        <a
          class="nav-link btn btn-sm btn-outline-primary rounded-pill px-3"
          href="/login"
          ><b>Log in</b></a
        >
        <% } %> <% if (currUser) { %>
        <a
          class="nav-link btn btn-sm btn-danger rounded-pill px-3"
          href="/logout"
          ><b>Log out</b></a
        >
        <% } %>
      </div>
    </div>
  </div>
</nav>
